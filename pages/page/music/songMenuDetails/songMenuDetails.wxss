.scroll_content{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.scroll_top{
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    background-color: #FFF;
}
.topSongMent{
    background-color: #3dcc9c;
    padding: 50rpx 25rpx;
}
.songMentMessage .images{
    width: 200rpx;
    min-width: 200rpx;
    height: 200rpx;
    margin-right: 25rpx;
}
.songMentMessage .images image{
    width: 100%;
    height: 100%;
    margin-right: 25rpx;
}
.songMentMessage .intro{
    flex-direction: column;
}
.songMentMessage .intro .songMentName{
    font-size: 32rpx;
    color: #FFF;
    padding-bottom: 15rpx;
}
.songMentMessage .intro .Description{
    font-size: 24rpx;
    color: #FFF;
    height: 70rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.songMentMessage .intro .songMentType text{
    font-size: 24rpx;
    background-color: #FFF;
    color: #3dcc9c;
    padding: 5rpx 15rpx;
    border-radius: 20rpx;
    margin: 10rpx 10rpx 0;
}
.topMessage{
    height: 100rpx;
    padding: 0 25rpx;
    align-items: center;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1px solid #efefef;
}
.topMessage .iconfont{
    font-size: 60rpx;
    color: #3dcc9c;
    margin-right: 10rpx;
}
.songList .list .li{
    padding: 25rpx;
    border-bottom: 1px solid #efefef;
}
.songList .list .active{
    background-repeat: no-repeat;
    background-position: 650rpx;
    background-size: 40rpx;
    background-image: url('data:image/svg+xml;base64,')
}
.songList .list .li .images{
    width: 77rpx;
    height: 77rpx;
    min-width: 77rpx;
    overflow: hidden;
    margin-right: 25rpx;
}   
.songList .list .li .images image{
    width: 100%;
    height: 100%;
}
.songList .list .li .message .name{
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #333;
}
.songList .list .li .message .author{
    font-size: 24rpx;
    width: 500rpx;
    color: #a0a0a0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.songList .list .active .message .name,.songList .list .active .message .author{
    color: #3dcc9c;
}