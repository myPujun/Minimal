/* pages/page/music/videoPlay/playPage.wxss */
.myVideo video{
    width: 100%;
    height: 500rpx;
    overflow: hidden;
}
.videoMessage{
    padding: 25rpx;
    border-bottom: 1px solid #f1f1f1;
}
.videoMessage .mvName{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}
.videoMessage .userName ,.videoMessage .time{
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
}
.mv_list .li{
    width: 650rpx;
    margin: 0 auto;
    background-color: #FFF;
    box-shadow: 0px 0px 20rpx rgba(0,0,0,.08);
    margin-top: 25rpx;
    margin-bottom: 25rpx;
    border-radius: 20rpx;
    padding: 25rpx;
}
.mv_list .img{
    position: relative;
    width: 140rpx;
    height: 140rpx;
    min-width: 140rpx;
    border-radius: 50%;
    padding: 10rpx;
    overflow: hidden;
    border: 1px solid #3dcc9c;
    margin-right: 25rpx;
}
.mv_list .img .iconfont{
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    color: #3dcc9c;
    margin-left: -30rpx;
    margin-top: -30rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    font-size: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.mv_list .img image{
    height: 100%;
    width: 140rpx;
    border-radius: 50%;
    overflow: hidden;
}
.mv_list .message .mvName{
    font-size: 30rpx;
    color: #333;
}
.mv_list .message .userName{
    color: #999;
    font-size: 26rpx;
    margin-top: 20rpx;
}