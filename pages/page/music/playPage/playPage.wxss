/* pages/page/music/playPage/playPage.wxss */
.topMessage{
    width: 500rpx;
    margin: 0 auto;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    text-align: center;
    margin-bottom: 100rpx;
}
.topMessage .songName{
    font-size: 30rpx;
    color: #333;
}
.topMessage .author{
    color:#8a8a8a;
    margin-top: 25rpx;
    font-size: 24rpx;
}
.songImages{
    position: relative;
    width: 378rpx;
    height: 378rpx;
    padding: 25rpx;
    border: 2px solid #3dcc9c; 
    margin: 0 auto;
    border-radius: 50%;
    overflow: hidden;
}
.songImages::after{
    content: "";
    position: absolute;
    left: 50%;
    margin-left: -25rpx;
    top: 50%;
    margin-top: -25rpx;
    width: 50rpx;
    height: 50rpx;
    background-color: #FFF;
    border-radius: 50%;
}
.songImages image{
    width: 378rpx;
    height: 378rpx;
    border-radius: 50%;
    overflow: hidden;
}
.playIcon{
    justify-content: space-around;
    align-items: center;
    text-align: center;
}
.playIcon .iconfont{
    font-size: 60rpx;
    color: #85888d;
}
.playIcon .isPlay{
    font-size: 100rpx;
}
.section_gap{
    padding: 50rpx;
}
.section_gap slider{
    margin: 0;
} 
.section_gap .time{
    width: 100%;
    text-align: right;
    font-size: 30rpx;
    color: #3dcc9c;
}