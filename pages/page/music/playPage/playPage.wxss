/* pages/page/music/playPage/playPage.wxss */
#myAudio{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    opacity: 0;
}
.topMessage{
    width: 500rpx;
    margin: 0 auto;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    text-align: center;
    margin-bottom: 100rpx;
}
.topMessage .songName{
    font-size: 30rpx;
    color: #3dcc9c;
}
.topMessage .authors{
    justify-content: center;
}
.topMessage .author{
    color:#8a8a8a;
    margin:0 10rpx;
    margin-top:25rpx;
    padding:5rpx 15rpx;
    border:1px solid #8a8a8a;
    font-size:24rpx;
    border-radius:40rpx;
}
.songImages{
    position: relative;
    width: 378rpx;
    height: 378rpx;
    padding: 50rpx;
    background-color: #3dcc9c;
    margin: 0 auto;
    border-radius: 50%;
    overflow: hidden;
}
.songImagesRotate{
    -webkit-transform: rotate(360deg);
    animation: rotation 10s linear infinite;
    -moz-animation: rotation 10s linear infinite;
    -webkit-animation: rotation 10s linear infinite;
    -o-animation: rotation 10s linear infinite;
}
.songImages::after{
    content: "";
    position: absolute;
    left: 50%;
    margin-left: -25rpx;
    top: 50%;
    margin-top: -25rpx;
    width: 50rpx;
    height: 50rpx;
    background-color: #FFF;
    border-radius: 50%;
}
.songImages image{
    width: 378rpx;
    height: 378rpx;
    border-radius: 50%;
    overflow: hidden;
}
.playIcon{
    justify-content: space-around;
    align-items: center;
    text-align: center;
}
.playIcon .iconfont{
    font-size: 60rpx;
    color: #85888d;
}
.playIcon .isPlay{
    font-size: 100rpx;
}
.section_gap{
    padding: 50rpx;
}
.section_gap slider{
    margin: 0;
} 
.section_gap .time{
    width: 100%;
    justify-content: space-between;
    text-align: right;
    font-size: 30rpx;
    color: #3dcc9c;
}
.section_gap .time .duration{
    color: #8a8a8a;
}
@-webkit-keyframes rotation{
    from {-webkit-transform: rotate(0deg);}
    to {-webkit-transform: rotate(360deg);}
}