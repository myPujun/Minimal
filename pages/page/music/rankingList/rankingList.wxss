/* pages/page/music/rankingList/rankingList.wxss */
.ranking_list .li{
    position: relative;
    margin: 50rpx 25rpx;
    padding: 25rpx;
    border-bottom-right-radius: 100rpx;
    border-top-left-radius: 100rpx;
    overflow: hidden;
    /* background-color: #3dcc9c; */
    box-shadow: 0 0rpx 15rpx rgba(0,0,0,.1);
}
.ranking_list .li .hint{
    position: absolute;
    top: 0;
    right: 0;
    padding: 5rpx 10rpx;
    background-color: rgba(0,0,0,.3);
    color: #FFF;
    font-size: 24rpx;
}
.ranking_list .images{
    width: 200rpx;
    min-width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-right: 40rpx;
    overflow: hidden;
}
.ranking_list .images image{
    width: 100%;
}
.ranking_list .list{
    width: 400rpx;
}
.ranking_list .list view{
    margin-top: 20rpx;
}
.ranking_list .list .index{
    font-size: 32rpx;
    color: #3dcc9c;
    padding-right: 20rpx;
}
.ranking_list .list view .song{
    font-weight: normal;
    font-size: 30rpx;
    color: #333;
}
.ranking_list .list view .author{
    font-weight: normal;
    font-size: 30rpx;
    color: #999;
}
.ranking_list .message{
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}