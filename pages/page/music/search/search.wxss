/* pages/page/music/search/search.wxss */
page{
    padding-top: 100rpx;
}
.topSsearch{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    align-items: center;
    z-index: 999;
    background-color: #FFF;
}
.search{
    width: 700rpx;
    height: 70rpx;
    margin: 0 auto;
    border-radius: 40rpx;
    box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,.1);
}
.search input{
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
    color: #333;
    font-size: 26rpx;
}
.searchIcon{
    background-repeat: no-repeat;
    background-size: 40rpx 40rpx;
    background-position: 630rpx 15rpx;
    background-image: url('data:image/png;base64,');
}
.suggest_list{
    position: fixed;
    top: 100rpx;
    left: 0;
    right: 0;
    padding: 0 25rpx;
    background-color: #FFF;
    box-shadow: 0px 8rpx 8rpx rgba(0,0,0,.1);
}
.suggest_list .li{
    font-size: 30rpx;
    color: #3dcc9c;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #f1f1f1;
}
.hot_list text{
    font-size: 30rpx;
    color: #FFF;
    padding: 10rpx 20rpx;
    background-color: #dddddd;
    border-radius: 40rpx;
    margin-top: 25rpx;
    margin-left: 25rpx;
    overflow: hidden;
}
.songList .list .li{
    padding: 25rpx;
    border-bottom: 1px solid #efefef;
}
.songList .list .active{
    background-repeat: no-repeat;
    background-position: 650rpx;
    background-size: 40rpx;
    background-image: url('data:image/svg+xml;base64,')
}
.songList .list .li .images{
    width: 77rpx;
    height: 77rpx;
    min-width: 77rpx;
    overflow: hidden;
    margin-right: 25rpx;
}   
.songList .list .li .images image{
    width: 100%;
    height: 100%;
}
.songList .list .li .message .name{
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #333;
}
.songList .list .li .message .author{
    font-size: 24rpx;
    width: 500rpx;
    color: #a0a0a0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.songList .list .active .message .name,.songList .list .active .message .author{
    color: #3dcc9c;
}