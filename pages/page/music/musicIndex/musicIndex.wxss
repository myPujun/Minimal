.container{
    padding-top: 100rpx;
}
.topSsearch{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    align-items: center;
    z-index: 999;
    background-color: #FFF;
}
.search{
    width: 700rpx;
    height: 70rpx;
    margin: 0 auto;
    border-radius: 40rpx;
    box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,.1);
}
.search input{
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
    color: #333;
    font-size: 26rpx;
}
.searchIcon{
    background-repeat: no-repeat;
    background-size: 40rpx 40rpx;
    background-position: 630rpx 15rpx;
    background-image: url('data:image/png;base64,');
}
.banner_swiper{
    padding: 30rpx 0;
    box-shadow: 0 5px 10px rgba(0,0,0,.1);
}
.banner_swiper swiper{
    width: 700rpx;
    height: 256rpx;
    border-radius: 8rpx;
    overflow: hidden;
    margin: 0 auto;
}
.banner_swiper image{
    width: 700rpx;
    height: 256rpx;
}
.nav_list navigator{
    padding-top: 25rpx;
    flex: 3;
    flex-direction: column;
    align-items: center;
}
.nav_list .iconfont{
    color: #3dcc9c;
    font-size: 60rpx;
}
.nav_list navigator text{
    color: #3dcc9c;
    font-size: 28rpx;
    
}
.column_content{
    border-top: 25rpx solid #fcfcfc;
    margin-top: 25rpx;
    padding: 0 25rpx;
}
.column_title{
    height: 75rpx;
    align-items: center;
    justify-content: space-between;
}
.column_title .title{
    font-size: 30rpx;
    color: #3dcc9c;
    font-weight: bold;
}
.column_title navigator{
    font-size: 24rpx;
    color: #adadad;
}
.GuessYouLike .list{
    flex-wrap: wrap;
    justify-content: space-around;
}
.GuessYouLike .list .li{
    margin-bottom: 25rpx;
}
.GuessYouLike .list .images{
    width: 217rpx;
    height: 210rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.GuessYouLike .list .images image{
    width: 100%;
    height: 100%;
}
.GuessYouLike .list .message{
    flex-direction: column;
    align-items: center;
}
.GuessYouLike .list .message .songName{
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
    width: 217rpx;
    padding: 20rpx 0 10rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.GuessYouLike .list .message .author{
    font-size: 24rpx;
    color: #adadad;
}
.hotSong .list .li{
    margin-bottom: 25rpx;
}
.hotSong .list .message{
    flex-direction: column;
}
.hotSong .list .songName{
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
}
.hotSong .list .author{
    font-size: 24rpx;
    color: #adadad;
    margin: 15rpx 0;
}
.hotSong .list .description{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.hotSong .list .images{
    width: 217rpx;
    min-width: 217rpx;
    height: 210rpx;
    margin-right: 25rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.hotSong .list .images image{
    width: 100%;
    height: 100%;
}
